<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_margin="@dimen/_5sdp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rlPrice"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_subscription"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            >

            <TextView
                android:id="@+id/tv_price0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="100.00"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvType0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SILVER"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1sp">

        </View>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/check"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                >
            </ImageView>

            <TextView
                android:id="@+id/tvDescription0"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 calls for $100.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/check"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                >
            </ImageView>

            <TextView
                android:id="@+id/tvNormalCalls0"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal_calls_are"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/check"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                >
            </ImageView>

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/additional_calls_are"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/tvCount"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/btnPay0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/border_mix_btn">

            <TextView
                android:id="@+id/btnBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20sp"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"
            />


    </LinearLayout>



</androidx.cardview.widget.CardView>